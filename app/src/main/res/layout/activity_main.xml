<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/resultField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/operationField"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <EditText
        android:id="@+id/numberField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:inputType="phone" />
    <LinearLayout
        android:id="@+id/oper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/numberField">
        <Button
            android:id="@+id/btn_del"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AC"
            android:onClick="onOperationClick"
            />
        <Button
            android:id="@+id/btn_plus_or_minus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+/-"
            android:onClick="onOperationClick"
            />
        <Button
            android:id="@+id/btn_procent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="%"
            android:onClick="onOperationClick"
            />
        <Button
            android:id="@+id/btn_delenie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="/"
            android:onClick="onOperationClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/own_for_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/btn_mnog"
        android:layout_below="@id/oper"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/four_for_six"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/btn_minus"
        android:layout_below="@id/own_for_three">

        <Button
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="4"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="5"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="6"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/seven_for_nine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/btn_plus"
        android:layout_below="@id/four_for_six">

        <Button
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="7"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
        <Button
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="9"
            android:layout_weight="1"
            android:onClick="onNumberClick"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btn_zero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/seven_for_nine">
        <Button
            android:id="@+id/zero"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:text="0"
            android:onClick="onNumberClick"/>
        <Button
            android:id="@+id/simbol"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text=","
            android:layout_below="@id/seven_for_nine"
            android:onClick="onNumberClick"/>

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_plus"
            android:text="="
            android:onClick="onOperationClick"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_mnog"
        android:layout_height="wrap_content"
        android:layout_width="87.5dp"
        android:text="*"
        android:layout_below="@id/oper"
        android:layout_alignParentRight="true"
        android:onClick="onOperationClick" />
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="87.5dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:layout_below="@id/btn_mnog"
        android:layout_alignParentRight="true"
        android:onClick="onOperationClick"
        />
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="87.5dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_alignParentRight="true"
        android:layout_below="@id/btn_minus"
        android:onClick="onOperationClick"
        />

</RelativeLayout>